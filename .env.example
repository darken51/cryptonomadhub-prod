# ============================================
# CryptoNomadHub - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# DATABASE
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
POSTGRES_PASSWORD=GENERATE_STRONG_POSTGRES_PASSWORD_HERE
DATABASE_URL=postgresql://nomad:${POSTGRES_PASSWORD}@postgres:5432/nomadcrypto

# ============================================
# SECURITY - CRITICAL!
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GENERATE_NEW_SECRET_KEY_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ============================================
# REDIS
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=GENERATE_STRONG_REDIS_PASSWORD_HERE
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ============================================
# OLLAMA (Local AI)
# ============================================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b

# ============================================
# PADDLE (Payments - Merchant of Record)
# Get credentials from https://vendors.paddle.com
# ============================================
PADDLE_VENDOR_ID=your_vendor_id
PADDLE_AUTH_CODE=your_auth_code_from_dashboard
PADDLE_PUBLIC_KEY=your_public_key
PADDLE_WEBHOOK_SECRET=your_webhook_secret_key

# Plans Paddle (IDs from dashboard)
PADDLE_PLAN_STARTER=your_starter_plan_id
PADDLE_PLAN_PRO=your_pro_plan_id
PADDLE_PLAN_ENTERPRISE=your_enterprise_plan_id

# ============================================
# EMAIL (Required for verification)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ============================================
# MONITORING (Highly Recommended)
# ============================================
SENTRY_DSN=your_sentry_dsn
ENVIRONMENT=development

# ============================================
# APP URLs
# ============================================
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:8001

# CORS - Comma-separated list of additional allowed origins (optional)
# Example: CORS_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com
# Leave empty to use FRONTEND_URL only (recommended for production)
CORS_ORIGINS=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500
